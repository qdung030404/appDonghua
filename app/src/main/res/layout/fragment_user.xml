<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".Fragment.UserFragment">

    <!-- Layout khi chưa đăng nhập -->
    <LinearLayout
        android:id="@+id/layout_not_logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="visible">

        <!-- Logo và Welcome Section -->

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Chào mừng bạn!"
                android:textColor="@color/app_text_primary"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:alpha="0.8"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="Đăng nhập để trải nghiệm đầy đủ tính năng và lưu lại các bộ truyện yêu thích của bạn"
                android:textColor="@color/app_text_secondary"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Đăng nhập"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/app_text_primary"
                android:backgroundTint="@color/board_color"
                android:letterSpacing="0.02"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/app_divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hoặc"
                    android:textSize="14sp"
                    android:textColor="@color/app_text_secondary"
                    android:alpha="0.6"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/app_divider" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Tạo tài khoản mới"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/app_text_primary"
                android:backgroundTint="@color/board_color"
                android:letterSpacing="0.02"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Layout khi đã đăng nhập (include logged_in.xml) -->
    <include
        android:id="@+id/layout_logged_in"
        layout="@layout/logged_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</FrameLayout>