<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/app_card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/rankingNumber"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/rankingText"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="4"
            android:layout_gravity="center"
            android:textColor="@color/app_text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:background="@drawable/ranking_circle" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="true">
            <ImageView
                android:id="@+id/topSearchBookCover"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topSearchTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thế Giới Hoàn Mỹ"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />


            </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>