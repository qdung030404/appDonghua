<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ReadActivity">

  <!-- Khu vực hiển thị nội dung đọc -->
  <ScrollView
      android:id="@+id/scrollViewContent"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="18sp"
        android:lineSpacingExtra="4dp"
        android:textColor="@android:color/white"
        android:text="Nội dung chương sẽ hiển thị ở đây..." />

  </ScrollView>

  <!-- View trong suốt để bắt sự kiện double tap -->
  <View
      android:id="@+id/touchInterceptor"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clickable="true"
      android:focusable="true"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <!-- Menu Bottom Bar (ẩn mặc định) -->
  <LinearLayout
      android:id="@+id/bottomMenuBar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@color/background"
      android:elevation="8dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <!-- Thanh điều khiển chương -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

      <!-- Nút chương trước -->
      <ImageButton
          android:id="@+id/btnPreviousChapter"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_arrow_left"
          android:scaleType="fitCenter"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:contentDescription="Chương trước"
          app:tint="@color/white" />
      <ImageButton
          android:id="@+id/btnBack"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_weight="1"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:src="@drawable/ic_home"
          android:scaleType="fitCenter"
          android:background="?attr/selectableItemBackground"
          android:contentDescription="Chọn chương"
          app:tint="@color/white" />
      <!-- Nút chọn chương -->
      <ImageButton
          android:id="@+id/btnSelectChapter"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_weight="1"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:src="@drawable/ic_chapter_list"
          android:scaleType="fitCenter"
          android:background="?attr/selectableItemBackground"
          android:contentDescription="Chọn chương"
          app:tint="@color/white" />
      <ImageButton
          android:id="@+id/btnToggleDarkMode"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_weight="1"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:src="@drawable/ic_dark_mode"
          android:scaleType="fitCenter"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:contentDescription="Chế độ sáng/tối"
          app:tint="@color/white" />
      <!-- Nút chương sau -->
      <ImageButton
          android:id="@+id/btnNextChapter"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_arrow_right"
          android:scaleType="fitCenter"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:contentDescription="Chương sau"
          app:tint="@color/white" />
      <!-- Nút chuyển đổi chế độ sáng/tối -->


    </LinearLayout>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>