<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".Activity.RankingActivity">

    <!-- Enhanced Toolbar with elevation and padding -->
    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/app_background">

        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_arrow_left"
                app:tint="@color/app_icon_tint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:letterSpacing="0.02"
                android:text="Bảng Xếp Hạng"
                android:textColor="@color/app_text_primary"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Main Content Area -->
    <RelativeLayout
        android:id="@+id/rankingBadge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_card"
        android:layout_marginTop="8dp">

        <!-- Side Menu with Card Design -->
        <androidx.cardview.widget.CardView
            android:id="@+id/menu_card"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/app_background">

            <ScrollView
                android:id="@+id/menu_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/filter_Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />
            </ScrollView>
        </androidx.cardview.widget.CardView>

        <!-- Fragment Container with Card Design -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/menu_card"
            android:layout_margin="2dp"
            android:layout_marginStart="0dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/app_background">

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>