<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_background"
    tools:context=".Fragment.CaseFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:paddingTop="10dp">


        <HorizontalScrollView
            android:id="@+id/menu_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/editButton"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/case_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>
        </HorizontalScrollView>

        <Button
            android:id="@+id/editButton"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="Sửa"
            android:textColor="@color/app_text_primary"
            android:textSize="16sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_divider" />

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/case_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/empty_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chưa có dữ liệu"
            android:textColor="@color/app_text_primary"
            android:textSize="16sp"
            android:visibility="gone" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_divider"/>
    <RelativeLayout
        android:id="@+id/bottom_edit_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_background"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/selectAllButton"
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/app_background"
                app:backgroundTintMode="screen"
                app:backgroundTint="@null"
                android:text="Chọn Tất Cả"
                android:textColor="@color/app_text_primary"/>

            <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/app_divider"/>
            <Button
                android:id="@+id/deleteButton"
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/app_background"
                app:backgroundTintMode="screen"
                app:backgroundTint="@null"
                android:text="Xóa"
                android:textColor="@color/error_color"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>