<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_card_background">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ý kiến phản hồi"
        android:textColor="@color/app_text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chúng tôi rất mong nhận được ý kiến đóng góp từ bạn"
        android:textColor="@color/app_text_secondary"
        android:textSize="14sp"
        android:gravity="center"
        android:alpha="0.8"
        android:layout_marginBottom="24dp" />

    <!-- Feedback Type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại phản hồi"
        android:textColor="@color/app_text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:id="@+id/feedback_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/round_conner"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="20dp" />

    <!-- Feedback Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung phản hồi"
        android:textColor="@color/app_text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/feedback_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/round_conner"
        android:hint="Nhập ý kiến của bạn..."
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:padding="16dp"
        android:textColor="@color/app_text_primary"
        android:textColorHint="@color/app_text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Hủy"
            android:textColor="@color/app_text_primary"
            android:backgroundTint="@android:color/transparent"
            android:textSize="14sp"
            android:textStyle="bold"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Gửi"
            android:textColor="@color/app_text_primary"
            android:backgroundTint="@color/app_background"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</LinearLayout>