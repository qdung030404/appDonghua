<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".Activity.ChangePasswordActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:padding="16sp"
            android:background="@color/app_card_background">

            <ImageButton
                android:id="@+id/BackButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_arrow_left"
                app:tint="@color/app_icon_tint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:letterSpacing="0.02"
                android:text="Thay đổi mật khẩu"
                android:textColor="@color/app_text_primary"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_card"
        android:layout_margin="16sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card_background"
            android:elevation="3dp"
            android:orientation="vertical"
            android:padding="24dp">
            <EditText
                android:id="@+id/old_password_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/round_conner"
                android:hint="Nhập mật khẩu cũ"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/app_text_primary"
                android:textColorHint="@color/app_text_secondary"
                android:textSize="16sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/app_text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/new_password_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/round_conner"
                android:hint="Nhập mật khẩu mới"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/app_text_primary"
                android:textColorHint="@color/app_text_secondary"
                android:textSize="16sp" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/app_text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/confirm_password_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/round_conner"
                android:hint="Xác nhân mật khẩu"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/app_text_primary"
                android:textColorHint="@color/app_text_secondary"
                android:textSize="16sp" />
            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/app_background"
                android:elevation="2dp"
                android:letterSpacing="0.05"
                android:text="Xác nhận"
                android:textColor="@color/app_text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>